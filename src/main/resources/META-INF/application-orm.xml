<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm" version="2.1">
    <entity class="nl.martijnklene.api.application.entity.BlogPost" name="BlogPost">
        <table name="blog_post" />
        <attributes>
            <id name="id">
                <column name="id" />
            </id>
            <basic name="title">
                <column name="title" />
            </basic>
            <basic name="content">
                <column name="content" />
            </basic>
            <basic name="tags">
                <column name="tags" />
            </basic>
            <basic name="author">
                <column name="author" />
            </basic>
            <basic name="publishedAt">
                <column name="published_at" />
            </basic>
        </attributes>
    </entity>
</entity-mappings>